<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:key="pref_host"
        android:title="@string/pref_host"
        android:summary="@string/pref_host_sum"
        android:defaultValue=""
        android:hint="tls://my-host.com?auth=mytoken"
        android:inputType="textWebEmailAddress"
        />
    <EditTextPreference
        android:key="pref_device_id"
        android:title="@string/pref_device_id"
        android:summary="@string/pref_device_id_sum"
        android:defaultValue=""
        android:hint="android/12345"
        android:inputType="textWebEmailAddress"
        />
</PreferenceScreen>